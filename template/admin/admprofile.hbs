<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link rel="stylesheet" href="/admin/newadmin.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>

    </style>
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-icons">
        <a href="/admin/index">
          <i class="fas fa-home"></i>
        </a>
        <a href="/admin/notifications">
          <i class="fas fa-bell"></i>
        </a>
        <a href="/admin/profile">
          <i class="fas fa-user"></i>
        </a>
      </div>
    </nav>

    <div class="content">
      <h1>Profile</h1>
      <form id="profile-form" action="/updateProfileAdmin" method="POST">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" />
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" />
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" />
        </div>
        <div class="form-group">
          <label for="profile-pic-input">Profile Picture:</label>
          <input
            type="file"
            id="profile-pic-input"
            name="profile-pic-input"
            accept="image/*"
          />
        </div>
        <button type="submit">Save</button>
      </form>
    </div>

    <script src="/admin/js/adminprofile.js"></script>
    </script>
  </body>
</html>