<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Event</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-icons">
        <a href="/admin/scheduleevent" class="nav-icon" id="back-button">
          <i class="fas fa-arrow-left"></i>
        </a>
        <a href="/admin/admprofile" class="nav-icon">
          <i class="fas fa-user"></i>
        </a>
      </div>
    </nav>

    <div class="container">
      <h2>Add New Event</h2>
      <form id="add-event-form">
        <label for="event-name">Event Name:</label>
        <input type="text" id="event-name" required />
        <label for="buses-required">Buses Required:</label>
        <input type="number" id="buses-required" required />
        <label for="start-point">Start Point:</label>
        <input type="text" id="start-point" required />
        <label for="destination-point">Destination Point:</label>
        <input type="text" id="destination-point" required />
        <label for="time">Time:</label>
        <input type="time" id="time" required />
        <label for="date">Date:</label>
        <input type="date" id="date" required />
        <label for="students">Students:</label>
        <input type="number" id="students" required />
        <label for="purpose">Purpose:</label>
        <input type="text" id="purpose" required />
        <div class="actions">
          <button type="submit" class="save">Save</button>
          <button type="button" class="close" id="close-add-event-popup">
            Close
          </button>
        </div>
      </form>

      <h3>Event Details</h3>
      <table>
        <thead>
          <tr>
            <th>S.No</th>
            <th>Event Name</th>
            <th>Buses Required</th>
            <th>Start Point</th>
            <th>Destination Point</th>
            <th>Time</th>
            <th>Date</th>
            <th>Students</th>
            <th>Purpose</th>
          </tr>
        </thead>
        <tbody id="event-list">
          <!-- Event details will be dynamically generated here -->
        </tbody>
      </table>
    </div>

    <script src="/js/scripts.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () { const
      addEventForm = document.getElementById("add-event-form"); const eventList
      = document.getElementById("event-list");
      addEventForm.addEventListener("submit", function (e) { e.preventDefault();
      const newEvent = { name: document.getElementById("event-name").value,
      busesRequired: parseInt( document.getElementById("buses-required").value
      ), startPoint: document.getElementById("start-point").value,
      destinationPoint: document.getElementById("destination-point").value,
      time: document.getElementById("time").value, date:
      document.getElementById("date").value, students:
      parseInt(document.getElementById("students").value), purpose:
      document.getElementById("purpose").value, }; const row =
      document.createElement("tr"); row.innerHTML = `
      <td>${eventList.children.length + 1}</td> <td>${newEvent.name}</td>
      <td>${newEvent.busesRequired}</td> <td>${newEvent.startPoint}</td>
      <td>${newEvent.destinationPoint}</td> <td>${newEvent.time}</td>
      <td>${newEvent.date}</td> <td>${newEvent.students}</td>
      <td>${newEvent.purpose}</td> `; eventList.appendChild(row);
      addEventForm.reset(); }); document
      .getElementById("close-add-event-popup") .addEventListener("click",
      function () { window.close(); }); });
    </script>
  </body>
</html>