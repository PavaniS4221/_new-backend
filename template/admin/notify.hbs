<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Notify Passengers</title>
  <link rel="stylesheet" href="/admin/notify.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-papapapapapapapap" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <img src="/images/nmit-logo.svg" alt="NITTE Logo" class="logo" />
    <div class="profile-region"></div>
    <div class="nav-icons">
      <a href="/admin/index" class="breadcrumb-link">Home</a>
      <a href="/admin/view-profile"><i class="fas fa-user"></i></a>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/admin/manage_admin"><i class="fas fa-user-tie"></i><span>Manage Admin</span></a>
    <a href="/admin/teacherdetails"><i class="fas fa-chalkboard-teacher"></i><span>Manage Teacher</span></a>
    <a href="/admin/studentdetails.html"><i class="fas fa-user-graduate"></i><span>Manage Student</span></a>
    <a href="/admin/driverdetails"><i class="fas fa-car"></i><span>Manage Driver</span></a>
    <a href="/admin/route"><i class="fas fa-route"></i><span>Route List</span></a>
    <a href="/admin/scheduleevent"><i class="fas fa-calendar-alt"></i><span>Schedule</span></a>
    <a href="/admin/complaintbox"><i class="fas fa-comment-dots"></i><span>Complaint Box</span></a>
    <a href="/admin/seatavailable"><i class="fas fa-chair"></i><span>Seat Availability</span></a>
    <a href="/admin/notify" class="active"><i class="fas fa-bell"></i><span>Admin Notification</span></a>
    <a href="/admin/inquiry"><i class="fas fa-question-circle"></i><span>Inquiry</span></a>
    <a href="/admin/payment-records"><i class="fas fa-money-bill-wave"></i><span>Payments</span></a>
    <a href="/loginform"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
  </div>

  <!-- Main Content -->
  <div class="student-details">
    <div class="breadcrumb">
      <h2 class="breadcrumb-title">Notify Passengers</h2>
    </div>

    <div class="toolbar">
      <div>
        <label for="showEntries">Show</label>
        <select id="showEntries">
          <option value="10">10</option>
          <option value="25">25</option>
          <option value="50">50</option>
          <option value="100">100</option>
        </select>
        entries
      </div>

      <div class="search-box">
        <input type="text" id="search" placeholder="Search..." />
      </div>
    </div>

    <div class="filter-buttons-container">
      <div class="filter-section">
        <label for="filter">Filter:</label>
        <select id="filter">
          <option value="all">All</option>
          <option value="student">Students</option>
          <option value="staff">Staff</option>
          <option value="admin">Admin</option>
          <option value="teacher">Teacher</option>
          <option value="busincharge">Driver</option>
        </select>
      </div>
      <div class="button-container">
        <button class="button" onclick="selectAll()">Select All</button>
        <button class="button" onclick="openModal()">Send Message</button>
        <button class="button" onclick="resetForm()">Reset</button>
      </div>
    </div>

    <!-- Modal for Sending Messages -->
    <div id="messageModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h3>Send Message</h3>
        <textarea id="messageInput" rows="4" placeholder="Your message here..."></textarea>
        <br /><br />
        <button class="send-btn" onclick="submitMessage()">Send</button>
      </div>
    </div>

    <!-- Table -->
    <table id="sortableTable">
      <thead>
        <tr>
          <th>Select</th>
          <th>Name</th>
          <th>Role</th>
          <th>Email</th>
          <th>Contact No</th>
          <th>Bus No</th>
          <th>Route No</th>
          <th>Payment Status</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody id="personList">
        <!-- Dynamically injected rows here -->
      </tbody>
    </table>
  </div>

  <!-- JavaScript -->
  <script src="/admin/notify.js"></script>
</body>
</html>
