  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <img src="../images/nmit-logo.svg" alt="NITTE Logo" class="logo" />
      <div class="profile-region"></div>
      <div class="nav-icons">
        <a href="/admin/index" class="breadcrumb-link">Home</a>
        <a href="/admin/view-profile">
          <i class="fas fa-user"></i>
        </a>
      </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
      <a href="/admin/manage_admin">
        <i class="fas fa-user-tie"></i>
        <span>Manage Admin</span>
      </a>
      <a href="/admin/teacherdetails">
        <i class="fas fa-chalkboard-teacher"></i>
        <span>Manage Teacher</span>
      </a>
      <a href="/admin/studentdetails.html">
        <i class="fas fa-user-graduate"></i>
        <span>Manage Student</span>
      </a>
      <a href="/admin/driverdetails">
        <i class="fas fa-car"></i>
        <span>Manage Driver</span>
      </a>
      <a href="/admin/route">
        <i class="fas fa-route"></i>
        <span>Route List</span>
      </a>
      <a href="/admin/scheduleevent">
        <i class="fas fa-calendar-alt"></i>
        <span>Schedule</span>
      </a>
      <a href="/admin/complaintbox">
        <i class="fas fa-comment-dots"></i>
        <span>Complaint Box</span>
      </a>
      <a href="/admin/seatavailable">
        <i class="fas fa-chair"></i>
        <span>Seat Availability</span>
      </a>
      <a href="/admin/notify">
        <i class="fas fa-bell"></i>
        <span>Admin Notification</span>
      </a>
      <a href="/admin/inquiry">
        <i class="fas fa-question-circle"></i>
        <span>Inquiry</span>
      </a>
      <a href="/admin/payment-records">
        <i class="fas fa-money-bill-wave"></i>
        <span>Payments</span>
      </a>
      <a href="/loginform">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </div>

    <!-- Main Content -->
    <div class="student-details">
      <div class="breadcrumb">
        <h2 class="breadcrumb-title">Notify Passengers</h2>
      </div>

      <div class="toolbar">
        <div>
          <label for="showEntries">Show</label>
          <select id="showEntries">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
          </select>
          entries
        </div>

        <div class="search-box">
          <input type="text" id="search" placeholder="Search..." />
        </div>
      </div>

      <div class="filter-buttons-container">
        <div class="filter-section">
          <label for="filter">Filter: </label>
          <select id="filter" onchange="filterList()">
            <option value="all">All</option>
            <option value="student">Students</option>
            <option value="staff">Staff</option>
          </select>
        </div>

        <div class="button-container">
          <button class="button" onclick="selectAll()">Select All</button>
          <button class="button" onclick="openModal()">Send Message</button>
          <button class="button" onclick="resetForm()">Reset</button>
        </div>
      </div>

      <!-- Modal for Sending Messages -->
      <div id="messageModal" class="modal">
        <div class="modal-content">
          <span class="close" onclick="closeModal()">&times;</span>
          <h3>Send Message</h3>
          <textarea
            id="messageInput"
            rows="4"
            placeholder="Your message here..."
          ></textarea>
          <br /><br />
          <button class="send-btn" onclick="submitMessage()">
            <div class="svg-wrapper-1">
              <div class="svg-wrapper">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  width="24"
                  height="24"
                >
                  <path fill="none" d="M0 0h24v24H0z"></path>
                  <path
                    fill="currentColor"
                    d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z"
                  ></path>
                </svg>
              </div>
            </div>
            <span>Send</span>
          </button>
        </div>
      </div>

      <!-- Table -->
      <table id="sortableTable">
        <thead>
          <tr>
            <th>Select</th>
            <th>ID</th>
            <th>Name</th>
            <th>Role</th>
            <th>Contact No.</th>
            <th>Bus No.</th>
            <th>Route No.</th>
            <th>Payment Status</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="personList">
          <tr data-role="student">
            <td>
              <input type="checkbox" class="select-person" data-name="Alfie Jr" />
            </td>
            <td>12353</td>
            <td>Alfie Jr</td>
            <td>Student</td>
            <td>8792546730</td>
            <td>12</td>
            <td>24</td>
            <td><span class="status-paid">Paid</span></td>
            <td><span class="status-active">Active</span></td>
            <td><button class="msg" onclick="openModal()">ðŸ“©</button></td>
          </tr>
          <tr data-role="staff">
            <td>
              <input type="checkbox" class="select-person" data-name="Neha G" />
            </td>
            <td>45678</td>
            <td>Jane Smith</td>
            <td>Staff</td>
            <td>8172546730</td>
            <td>1</td>
            <td>20</td>
            <td><span class="status-paid">Paid</span></td>
            <td><span class="status-active">Active</span></td>
            <td><button class="msg" onclick="openModal()">ðŸ“©</button></td>
          </tr> 
          <tr data-role="staff">
            <td>
              <input type="checkbox" class="select-person" data-name="John Doe" />
            </td>
            <td>78901</td>
            <td>John Doe</td>
            <td>Staff</td>
            <td>9872546730</td>
            <td>22</td>
            <td>19</td>
            <td><span class="status-paid">Paid</span></td>
            <td><span class="status-inactive">Inactive</span></td>
            <td><button class="msg" onclick="openModal()">ðŸ“©</button></td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- JavaScript -->
    <script src="/admin/js/notify.js"></script>
  </body>
</html>
