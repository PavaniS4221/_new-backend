<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Event</title>
    <link rel="stylesheet" href="/admin/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>

    </style>
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-icons">
        <a href="/admin/index">
          <i class="fas fa-home"></i>
        </a>
        <a href="/admin/notifications">
          <i class="fas fa-bell"></i>
        </a>
        <a href="/admin/profile">
          <i class="fas fa-user"></i>
        </a>
      </div>
    </nav>

    <div class="content">
      <h1>Add New Event</h1>
      <form id="add-event-form">
        <label for="event-name">Event Name:</label>
        <input type="text" id="event-name" required />

        <label for="buses-required">Number of Buses Required:</label>
        <input type="number" id="buses-required" required />

        <label for="start-point">Start Point:</label>
        <input type="text" id="start-point" required />

        <label for="destination-point">Destination Point:</label>
        <input type="text" id="destination-point" required />

        <label for="event-time">Time:</label>
        <input type="time" id="event-time" required />

        <label for="event-date">Date:</label>
        <input type="date" id="event-date" required />

        <label for="number-of-students">Number of Students:</label>
        <input type="number" id="number-of-students" required />

        <label for="purpose">Purpose:</label>
        <textarea id="purpose" required></textarea>

        <button type="submit">Add Event</button>
      </form>
    </div>

    <script src="/admin/js/addevent.js"></script>
  </body>
</html>