            <div
              class="dropdown-menu dropdown-menu-right"
              aria-labelledby="navbarDropdown"
            >
              <a class="dropdown-item" href="/admin/view profile">View Profile</a>
              <a class="dropdown-item" href="/admin/changepassword">Change
                Password</a>
