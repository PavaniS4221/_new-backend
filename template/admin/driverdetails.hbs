              <a class="dropdown-item" href="/admin/index">Logout</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
      <div class="container">
        <h1>Driver Details</h1>
        <div class="search-container">
          <input
            type="text"
            id="search"
            placeholder="Search by driver name or bus number"
          />
          <button type="button" onclick="searchDriver()">Search</button>
        </div>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Driver Name</th>
              <th>Bus Number</th>
              <th>Route Number</th>
              <th>Phone Number</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="driver-details">
            <!-- Example row -->
            <tr>
              <td>John Doe</td>
              <td>1234</td>
              <td>56</td>
              <td>9876543210</td>
              <td>
                <a href="#" class="btn btn-sm btn-primary edit-btn">
                  <i class="fas fa-pencil-alt"></i>
                </a>
                <a href="#" class="btn btn-sm btn-danger delete-btn">
                  <i class="fas fa-trash-alt"></i>
                </a>
              </td>
            </tr>
          </tbody>
        </table>
        <!-- Edit Driver Modal -->
        <div
          class="modal fade"
          id="editDriverModal"
          tabindex="-1"
          aria-labelledby="editDriverModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="editDriverModalLabel">
                  Edit Driver
                </h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="edit-driver-form">
                  <div class="form-group">
                    <label for="edit-driver-name">Driver Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit-driver-name"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="edit-bus-number">Bus Number</label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit-bus-number"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="edit-route-number">Route Number</label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit-route-number"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="edit-phone-number">Phone Number</label>
                    <input
                      type="text"
                      class="form-control"
                      id="edit-phone-number"
                      required
                    />
                  </div>
                  <button
                    type="button"
                    class="btn btn-primary"
                    id="save-changes"
                  >
                    Save changes
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="button-container">
          <a href="/admin/add_driver" class="btn btn-primary">Add Driver</a>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    ></script>
    <script src="/js/driverdetails.js"></script>
  </body>
</html>