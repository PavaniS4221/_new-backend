<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Enquiry | BusSys</title>
  <link rel="stylesheet" href="/home.css" />
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <!-- âœ… Font Awesome Icons -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
/>

</head>
<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <ul class="sidebar-menu">
        <li><i class="fas fa-home"></i> <a href="/student/home">Home</a></li>
        <li><i class="fas fa-id-card"></i> <a href="/student/registration">Registration</a></li>
        <li><i class="fas fa-credit-card"></i> <a href="/student/payment">Payment</a></li>
        <li><i class="fas fa-user"></i> <a href="/student/profile">Profile</a></li>
        <li><i class="fas fa-comment-dots"></i> <a href="/student/complaint">Complaint</a></li>
        <li><i class="fas fa-question-circle"></i> <a href="/student/enquiry">Enquiry</a></li>
      </ul>
      <ul class="sidebar-menu">
        <li><i class="fas fa-sign-out-alt"></i> <a href="#">Logout</a></li>
      </ul>
    </aside>

    <!-- Main Content -->
    <div class="main-section">
      <!-- Top Navigation -->
      <nav class="top-nav">
        <div class="top-left">
          <img src="nitte-nmit-logo.png" alt="Nitte Logo" class="top-logo">
        </div>
        <div class="search-bar">
          <input type="text" placeholder="Search..." />
        </div>
        <div class="nav-actions">
          <i class="fas fa-bell"></i>
          <div class="profile-dropdown">
            <img src="https://i.pravatar.cc/40" alt="Profile" class="avatar" id="profileToggle">
            <div class="dropdown-menu" id="dropdownMenu">
              <a href="/student/profile"><i class="fas fa-user"></i> Profile</a>
              <a href="#"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
          </div>
        </div>
      </nav>

      <!-- Enquiry Form -->
      <div class="dashboard-content">
        <div class="card">
          <h2>Submit an Enquiry</h2>
          <form class="form">
            <div class="form-group">
              <label for="studentName">Your Name:</label>
              <input type="text" id="studentName" placeholder="Enter your full name" required>
            </div>

            <div class="form-group">
              <label for="email">Your Email:</label>
              <input type="email" id="email" placeholder="Enter your email" required>
            </div>

            <div class="form-group">
              <label for="query">Your Enquiry:</label>
              <textarea id="query" rows="5" placeholder="Type your question or concern..." required></textarea>
            </div>

            <button type="submit" class="btn-primary">Send Enquiry</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/home.js"></script>
</body>
</html>
