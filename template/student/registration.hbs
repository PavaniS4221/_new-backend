<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Registration | BusSys</title>
  <link rel="stylesheet" href="/student_home.css" />
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <!-- âœ… Font Awesome Icons -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
/>

</head>
<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <ul class="sidebar-menu">
        <li><i class="fas fa-home"></i> <a href="/student/student_home">Home</a></li>
        <li><i class="fas fa-id-card"></i> <a href="/student/registration">Registration</a></li>
        <li><i class="fas fa-credit-card"></i> <a href="/student/payment">Payment</a></li>
        <li><i class="fas fa-user"></i> <a href="/student/profile">Profile</a></li>
        <li><i class="fas fa-comment-dots"></i> <a href="/student/complaint">Complaint</a></li>
        <li><i class="fas fa-question-circle"></i> <a href="/student/enquiry">Enquiry</a></li>
      </ul>
      <ul class="sidebar-menu">
        <li><i class="fas fa-sign-out-alt"></i> <a href="#">Logout</a></li>
      </ul>
    </aside>

    <!-- Main Content -->
    <div class="main-section">
      <!-- Top Navigation -->
      <nav class="top-nav">
        <div class="top-left">
          <img src="../images/nitte-nmit-logo.png" alt="Nitte Logo" class="top-logo">
        </div>
        <div class="search-bar">
          <input type="text" placeholder="Search..." />
        </div>
        <div class="nav-actions">
          <i class="fas fa-bell"></i>
          
          <div class="profile-dropdown">
            <img src="https://i.pravatar.cc/40" alt="Profile" class="avatar" id="profileToggle">
            <div class="dropdown-menu" id="dropdownMenu">
              <a href="/student/profile"><i class="fas fa-user"></i> Profile</a>
              <a href="loginform"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
          </div>
        </div>
      </nav>

      <!-- Registration Form -->
      <div class="dashboard-content">
        <div class="card">
          <h2>Bus Registration</h2>
          <form class="form">
            <div class="form-group">
              <label for="studentName">Student Name:</label>
              <input type="text" id="studentName" name="studentName" required>
            </div>

            <div class="form-group">
              <label for="studentID">Student ID:</label>
              <input type="text" id="studentID" name="studentID" required>
            </div>

            <div class="form-group">
              <label for="department">Department:</label>
              <input type="text" id="department" name="department" required>
            </div>

            <div class="form-group">
              <label for="route">Bus Route:</label>
              <select id="route" name="route">
                <option value="">--Select Route--</option>
                <option value="1">Route 1</option>
                <option value="2">Route 2</option>
                <option value="3">Route 3</option>
                <option value="4">Route 4</option>
                <option value="5">Route 5</option>
                <option value="6">Route 6</option>
                <option value="7">Route 7</option>
                <option value="8">Route 8</option>
                <option value="9">Route 9</option>
                <option value="10">Route 10</option>
                <option value="11">Route 11</option>
                <option value="12">Route 12</option>
                <option value="13">Route 13</option>
                <option value="14">Route 14</option>
                <option value="15">Route 15</option>
                <option value="16">Route 16</option>
                <option value="17">Route 17</option>
                <option value="18">Route 18</option>
                <option value="19">Route 19</option>
                <option value="20">Route 20</option>
                <option value="21">Route 21</option>
                <option value="22">Route 22</option>
                <option value="23">Route 23</option>
                <option value="24">Route 24</option>
                <option value="25">Route 25</option>
                <option value="26">Route 26</option>
              </select>
            </div>

            <div class="form-group">
              <label for="pickup">Pickup Point:</label>
              <input type="text" id="pickup" name="pickup" required>
            </div>

            <div class="form-group">
              <label for="mobile">Mobile Number:</label>
              <input type="tel" id="mobile" name="mobile" required>
            </div>

            <button type="submit" class="btn-primary">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/student_home.js"></script>
</body>
</html>
